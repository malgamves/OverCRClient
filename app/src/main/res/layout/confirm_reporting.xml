<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".ConfirmedSent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="93dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_margin="15dp" />

    <TextView
        android:text=" We've got someone on thier way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:textSize="24sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:text=" please try and avoid your attackers "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_margin="20dp" />

    <TextView
        android:text=" Your location is being shared \n Please stay in open spaces and do not try to interact with your suspicious persons "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_margin="20dp" />






</LinearLayout>